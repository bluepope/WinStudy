<Window x:Class="WpfMvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvm"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Label Content="포커스아웃" HorizontalAlignment="Left" Height="27" Margin="28,8,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="107,10,0,0" TextWrapping="Wrap" Text="{Binding Path=Text1 }" VerticalAlignment="Top" Width="120"/>

        <Label Content="키입력" HorizontalAlignment="Left" Height="27" Margin="28,38,0,0" VerticalAlignment="Top" Width="74"/>
        <!--명시적인 업데이트 지정-->
        <TextBox HorizontalAlignment="Left" Height="27" Margin="107,38,0,0" TextWrapping="Wrap" Text="{Binding Path=Text1, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="120" />

        <ProgressBar HorizontalAlignment="Left" Height="25" Margin="10,84,0,0" VerticalAlignment="Top" Width="357" Value="{Binding Num1}" />

        <ProgressBar HorizontalAlignment="Left" Height="25" Margin="10,169,0,0" VerticalAlignment="Top" Width="357" Value="{Binding Num2}" />
        <Slider HorizontalAlignment="Left" Height="40" Margin="10,136,0,0" VerticalAlignment="Top" Width="357" Value="{Binding Num2}" Minimum="0" Maximum="100" TickPlacement="BottomRight" TickFrequency="5" />
        <TextBlock HorizontalAlignment="Left" Height="50" Margin="282,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0}&#x0a;{1}&#x0a;{2}">
                    <Binding Path="Text1"></Binding>
                    <Binding Path="Num1"></Binding>
                    <Binding Path="Num2"></Binding>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <Image Name="image1" HorizontalAlignment="Left" Height="110" Margin="10,199,0,0" VerticalAlignment="Top" Width="243"/>

        <Button Content="랜덤값 생성" HorizontalAlignment="Left" Height="67" Margin="596,74,0,0" VerticalAlignment="Top" Width="83" Command="{Binding Button1Command}" >

        </Button>

        <Frame Name="frame1" Source="/Page1.xaml" HorizontalAlignment="Left" Height="427" Margin="63,261,0,0" VerticalAlignment="Top" Width="960"/>
        <TextBox HorizontalAlignment="Left" Height="27" Margin="559,38,0,0" TextWrapping="Wrap" Text="{Binding Text2, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
