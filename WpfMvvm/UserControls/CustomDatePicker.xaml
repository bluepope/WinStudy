<UserControl x:Class="WpfMvvm.UserControls.CustomDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMvvm.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <DatePicker SelectedDate="{Binding DateTimeValue}" VerticalAlignment="Top" Height="30" />
        <TextBlock Text="{Binding DateTimeValue}" Margin="0,30,0,0"/>
    </Grid>
</UserControl>
