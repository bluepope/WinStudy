<UserControl x:Class="WpfMvvm.UserControls.TextDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:WpfMvvm.Converters"
             xmlns:local="clr-namespace:WpfMvvm.UserControls"
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <UserControl.Resources>
        <converter:StringToDateTimeConverter x:Key="stringToDateTimeConverter"/>
    </UserControl.Resources>
    <Grid>
        <DatePicker SelectedDate="{Binding Value, ElementName=uc, Converter={StaticResource stringToDateTimeConverter}, ConverterParameter=Format}" VerticalAlignment="Top" Height="30" />
        <Label Content="{Binding Value, ElementName=uc}" Margin="0,30,0,0"/>
    </Grid>
</UserControl>
